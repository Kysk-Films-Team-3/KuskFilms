{
  "realm": "kyskfilms",
  "enabled": true,
  "displayName": "KYSKFilms",
  "displayNameHtml": "<h2>KYSKFilms</h2>",
  "defaultSignatureAlgorithm": "RS256",
  "revokeRefreshToken": false,
  "refreshTokenMaxReuse": 0,
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "offlineSessionMaxLifespanEnabled": false,
  "offlineSessionMaxLifespan": 5184000,
  "loginTheme": "KYSKfilms",
  "accountTheme": "keycloak",
  "adminTheme": "keycloak",
  "emailTheme": "keycloak",
  "internationalizationEnabled": true,
  "supportedLocales": [
    "en",
    "uk",
    "ru"
  ],
  "defaultLocale": "en",
  "registrationAllowed": true,
  "registrationEmailAsUsername": true,
  "rememberMe": true,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "roles": {
    "realm": [
      {
        "name": "USER",
        "description": "Regular user role",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "ADMIN",
        "description": "Administrator role",
        "composite": false,
        "clientRole": false
      }
    ]
  },
  "clients": [
    {
      "clientId": "kyskfilms-frontend",
      "name": "KYSKFilms Frontend",
      "description": "React frontend application",
      "enabled": true,
      "publicClient": true,
      "protocol": "openid-connect",
      "webOrigins": [
        "http://localhost",
        "http://localhost:3000"
      ],
      "redirectUris": [
        "http://localhost/*",
        "http://localhost:3000/*"
      ],
      "standardFlowEnabled": true

    },
    {
      "clientId": "kyskfilms-backend",
      "name": "KYSKFilms Backend",
      "description": "Spring Boot backend service",
      "enabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "bearerOnly": true,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "authorizationServicesEnabled": false
    },
    {
      "clientId": "kyskfilms-swagger",
      "name": "KYSKFilms Swagger",
      "description": "Client for Swagger UI authorization",
      "enabled": true,
      "publicClient": true,
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "webOrigins": [
        "http://localhost"
      ],
      "redirectUris": [
        "http://localhost/swagger-ui/oauth2-redirect.html"
      ]
    }
  ]
}